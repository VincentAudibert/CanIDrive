<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_margin="5dp"
    tools:context="com.vaudibert.canidrive.ui.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:id="@+id/linearNewDrink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/WHITE"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewTitle"
            android:text="Describe your drink:" />

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Volume (in mL)"
            android:inputType="number"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editTextDegree"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="% of alcohol"
            android:inputType="numberDecimal"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editTextBefore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="How long (in mn)"
            android:inputType="number"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonValidateNewDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/WHITE"
            android:background="@drawable/background_button"
            android:text="OK"
            android:layout_gravity="end"
            />


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>